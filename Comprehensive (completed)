print('','Monthly Rewards:') 
free_drinks = drinks // 5
extra = drinks % 5
if free_drinks == 1 :
    print(' ', free_drinks, 'free drink,',extra,'extra')
else :
    print(' ', free_drinks, 'free drinks,',extra,'extra')
free_chips = chips // 7
extra = chips % 7
if free_chips == 1 :
    print(' ', free_chips, 'free bag of chips,',extra,'carried over')
else :
    print(' ', free_chips, 'free bags of chips,',extra,'carried over')
    
if giftcards == 1 :
    print(' ', giftcards, '$25 gift card,', pointremainder , 'points carried over')
else : 
     print(' ', giftcards, '$25 gift cards,', pointremainder , 'points carried over')

